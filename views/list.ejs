<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="pngegg.png">
    <title>ToDo_List</title>
</head>

<body>
    <div class="box" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>

    <div class="box" id="heading">
        <h1>
            <%= day %>
        </h1>
    </div>
    <div class="box">

        <% newItems.forEach((ele)=>{ %> 
            <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox"  name="check" value="<%= ele._id%>" onchange="this.form.submit()">
                <p>
                    <%= ele.item %>
                        
                </p>
            </div>
            <input type="hidden" name="listCheck" value="<%= listTitle %>">
        </form>
            <% }) %>
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="New Items">
                <button type="submit" name="list" value="<%= listTitle %>">+</button>
            </form>
    </div>

    
</body>

</html>